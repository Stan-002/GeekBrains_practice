{
    "csharp.format.enable": true,
    "editor.semanticHighlighting.enabled": true,
    "csharp.semanticHighlighting.enabled": true,
    "csharp.editor.underline": true,
    "csharp.format.enableEditorConfigSupport": true,
    "csharp.linting.enable": true,
    "csharp.linting.enableRoslynAnalyzers": true,
    "csharp.linting.run": "onSave",
    "csharp.linting.provider": "roslyn",
    "csharp.linting.mode": "save",
    "editor.codeActionsOnSave": {
        "source.organizeImports": true
    },
    "editor.codeActionsOnSaveTimeout": 15000
}